{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "check",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo check"
		},
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo build"
		},
		{
			"type": "cargo",
			"command": "fmt",
			"args": [
				"--all",
				"--",
				"--verbose"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo fmt"
		},
		{
			"type": "cargo",
			"command": "clippy",
			"args": [
				"--all",
				"--tests",
				"--all-features",
				"--all-targets",
				"--",
				"-D",
				"clippy::all"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo clippy"
		}
	]
}
